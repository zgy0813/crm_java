<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zgy.qshy.user.mapper.UserMapper">
    <resultMap id="userMap" type="com.zgy.qshy.user.entity.User">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="password" column="password"/>
        <result property="account" column="account"/>
        <result property="avatar" column="avatar"/>
        <result property="phone" column="phone"/>
        <result property="mail" column="mail"/>
        <result property="sex" column="sex"/>
        <collection property="roles" ofType="com.zgy.qshy.sys.role.entity.Role">
            <id property="id" column="roleId"/>
            <result property="code" column="roleName"/>
            <collection property="auths" ofType="com.zgy.qshy.sys.auth.entity.Auth">
                <id property="id" column="authId"/>
                <result property="permission" column="permission"/>
            </collection>
        </collection>
    </resultMap>

    <select id="findById" parameterType="Map" resultMap="userMap">
    SELECT
        user.id,
        user.name,
        user.password,
        user.account,
        user.phone,
        user.mail,
        user.avatar,
        user.sex,
        role.id AS roleId,
        role.code AS roleName,
        auth.id AS authId,
        CONCAT(auth.permission,':',auth.action) AS permission
    FROM
        tbl_user user,
        sys_user_role user_role ,
        sys_role role,
        sys_role_auth role_auth,
        sys_auth auth
    WHERE
        user.id = #{id}
        AND user.id = user_role.user_id
        AND user_role.role_id = role.id
        AND role.id = role_auth.role_id
        AND role_auth.auth_id = auth.id
    </select>

</mapper>
